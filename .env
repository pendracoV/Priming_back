# Configuración del servidor
PORT=5000
NODE_ENV=development

# Configuración de la base de datos
DATABASE_URL=postgres://postgres:1234@localhost:5435/priming

# JWT (JSON Web Token)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=2h

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000

# Configuración de logging
LOG_LEVEL=info

# Configuración de seguridad
BCRYPT_SALT_ROUNDS=10

# Configuración de archivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880 # 5MB

# Para producción, cambia esto:
# NODE_ENV=production
# CORS_ORIGIN=https://priming.com
# DATABASE_URL=postgres://production_user:secure_password@production_host:5432/priming_db_x